@{
    ViewData["Title"] = "Department Services";
}
<style>
    body {
        background-color: white; /* تغيير خلفية الصفحة إلى اللون الأبيض */
    }
</style>
<!-- تضمين مكتبة AOS.js للتأثيرات -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>

<div class="container mt-5">
    <h2 class="text-center fw-bold" style="color:black">Our Department Services</h2>
    <p class="text-center text-muted" style="color:black">Explore the various services provided by our departments.</p>

    <!-- شريط البحث -->
    <div class="d-flex justify-content-center my-4">
        <input type="text" id="searchInput" class="form-control w-50" placeholder="Search for a service..." onkeyup="filterServices()">
    </div>

    <!-- حاوية الخدمات -->
    <div class="row mt-4 d-flex flex-wrap" id="servicesContainer">
        <!-- خدمة الموارد البشرية -->
        <div class="col-12 col-md-4" data-aos="fade-up">
            <div class="card shadow-sm border-0 d-flex flex-column h-100">
                <img src="~/images/managers/shutterstock_594753989-1 (1).jpg" class="card-img-top img-fluid" alt="HR Services" style="height: 200px; object-fit: cover;">
                <div class="card-body d-flex flex-column flex-grow-1">
                    <h5 class="card-title" style="color: black;">Human Resources</h5>
                    <p class="card-text flex-grow-1">Manage employee records, payroll, and performance.</p>
                    <a href="#" class="btn btn-primary mt-auto">Learn More</a>
                </div>
            </div>
        </div>

        <!-- خدمة الدعم الفني -->
        <div class="col-12 col-md-4" data-aos="fade-up" data-aos-delay="100">
            <div class="card shadow-sm border-0 d-flex flex-column h-100">
                <img src="~/images/managers/imageLead.imageformat.1564x880.1764080851.jpg" class="card-img-top img-fluid" alt="IT Support" style="height: 200px; object-fit: cover;">
                <div class="card-body d-flex flex-column flex-grow-1">
                    <h5 class="card-title" style="color: black;">IT Support</h5>
                    <p class="card-text flex-grow-1">Technical support and infrastructure management.</p>
                    <a href="#" class="btn btn-primary mt-auto">Learn More</a>
                </div>
            </div>
        </div>

        <!-- خدمة الشؤون المالية -->
        <div class="col-12 col-md-4" data-aos="fade-up" data-aos-delay="200">
            <div class="card shadow-sm border-0 d-flex flex-column h-100">
                <img src="~/images/managers/shutterstock_657337522.jpg" class="card-img-top img-fluid" alt="Finance" style="height: 200px; object-fit: cover;">
                <div class="card-body d-flex flex-column flex-grow-1">
                    <h5 class="card-title" style="color: black;">Finance</h5>
                    <p class="card-text flex-grow-1">Budgeting, expense tracking, and financial reports.</p>
                    <a href="#" class="btn btn-primary mt-auto">Learn More</a>
                </div>
            </div>
        </div>

        <!-- خدمة الشؤون القانونية -->
        <div class="col-12 col-md-4 mt-4" data-aos="fade-up">
            <div class="card shadow-sm border-0 d-flex flex-column h-100">
                <img src="~/images/managers/FLLP_legal_affairs_work.png" class="card-img-top img-fluid" alt="Legal" style="height: 200px; object-fit: cover;">
                <div class="card-body d-flex flex-column flex-grow-1">
                    <h5 class="card-title" style="color: black;">Legal</h5>
                    <p class="card-text flex-grow-1">Compliance, contracts, and legal support.</p>
                    <a href="#" class="btn btn-primary mt-auto">Learn More</a>
                </div>
            </div>
        </div>

        <!-- خدمة التدريب والتطوير -->
        <div class="col-12 col-md-4 mt-4" data-aos="fade-up" data-aos-delay="100">
            <div class="card shadow-sm border-0 d-flex flex-column h-100">
                <img src="~/images/managers/24-1269129_career-spotlight-training-development-manager-image_1000x568.jpg" class="card-img-top img-fluid" alt="Training" style="height: 200px; object-fit: cover;">
                <div class="card-body d-flex flex-column flex-grow-1">
                    <h5 class="card-title" style="color: black;">Training & Development</h5>
                    <p class="card-text flex-grow-1">Workshops, employee training, and career development.</p>
                    <a href="#" class="btn btn-primary mt-auto">Learn More</a>
                </div>
            </div>
        </div>

        <!-- خدمة دعم العملاء -->
        <div class="col-12 col-md-4 mt-4" data-aos="fade-up" data-aos-delay="200">
            <div class="card shadow-sm border-0 d-flex flex-column h-100">
                <img src="~/images/managers/Blog_customercare_1500x884-1.jpg" class="card-img-top img-fluid" alt="Customer Support" style="height: 200px; object-fit: cover;">
                <div class="card-body d-flex flex-column flex-grow-1">
                    <h5 class="card-title" style="color: black;">Customer Support</h5>
                    <p class="card-text flex-grow-1">Assisting employees with queries and concerns.</p>
                    <a href="#" class="btn btn-primary mt-auto">Learn More</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // تفعيل مكتبة AOS.js لظهور العناصر بتأثيرات مختلفة
    AOS.init();

    // دالة لتصفية الخدمات بناءً على النص المدخل في شريط البحث
    function filterServices() {
        let input = document.getElementById("searchInput").value.toLowerCase();
        let cards = document.querySelectorAll(".col-md-4");

        // تصفية الخدمات بناءً على النص المدخل
        cards.forEach(card => {
            let title = card.querySelector(".card-title").innerText.toLowerCase();
            if (title.includes(input)) {
                card.style.display = "block";
            } else {
                card.style.display = "none";
            }
        });
    }
</script>
