@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Employee";
}

<h1>Employee</h1>

<hr />
<a asp-action="AddManager" class="btn btn-primary">Create New</a>
<a asp-action="ManagerToPDF" asp-controller="Hrs" class="btn btn-primary">Download PDF</a>

<div class="row mt-3">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5>@item.Name</h5>
                </div>
                <div class="card-body">
                    <p><strong>Email:</strong> @item.Email</p>
                    <p><strong>Address:</strong> @item.Address</p>
                    <p><strong>Position:</strong> @item.Position</p>
                    <p><strong>Department:</strong> @item.Department.Name</p>
                    <p><strong>Manager:</strong> @item.Manager.Name</p>
                </div>
                <div class="card-footer">
                    <a asp-action="EmployeeDetails" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                </div>
            </div>
        </div>
    }
</div>
