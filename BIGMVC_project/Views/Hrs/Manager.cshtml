@model IEnumerable<Manager>

<style>
    body {
        background-color: white;
    }

    .card {
        border: 1px solid #ddd;
        border-radius: 8px;
        margin: 10px;
        padding: 15px;
        cursor: pointer;
        transition: box-shadow 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card.expanded {
            background-color: #f9f9f9;
        }

    .card-header {
        font-weight: bold;
        font-size: 18px;
    }

    .card-details {
        display: none;
        margin-top: 10px;
    }

    .card.expanded .card-details {
        display: block;
    }
</style>

<h1 style="color:black;">Managers List</h1>



<hr />
<a asp-action="AddManager" class="btn btn-primary">Create New</a>
<a asp-action="ManagerToPDF" asp-controller="Hrs" class="btn btn-primary">Download PDF</a>

<div class="card-container">
    @foreach (var item in Model)
    {
        <div class="card" onclick="toggleCard(this)">
            <div class="card-header">
                @Html.DisplayFor(modelItem => item.Name)
            </div>
            <div class="card-details">
                <p><strong>Email:</strong> @Html.DisplayFor(modelItem => item.Email)</p>
                <p><strong>Department:</strong> @Html.DisplayFor(modelItem => item.Department.Name)</p>
            </div>
        </div>
    }
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function toggleCard(card) {
        $(card).find('.card-details').slideToggle(300);
        card.classList.toggle('expanded');
    }
</script>