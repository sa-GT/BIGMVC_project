@model Employee
@{
	Layout = "~/Views/Shared/_LayoutGen.cshtml";
}
<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrumb" class="bg-white mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/item_list.html">Item</a></li>
                <li class="breadcrumb-item active" aria-current="page">Add Item</li>
            </ol>
        </nav>
    </div>
</div>
<div class="row">
    <div class="col-12 col-xl-8">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="feather-plus-circle text-primary mr-2"></i>Add Item</h4>
                    <a href="item_list.html" class="btn btn-outline-primary">
                        <i class="feather-list"></i>
                    </a>
                </div>
                <hr>
                <form asp-action="Addemployee" method="post">
                    <div class="row">
                        <div class="col-12 col-md-6">
                            <div class="form-group">
                                <label asp-for="ImagePath">Photo Upload</label><i class="feather-info" title="Only Support JPG OR PNG"></i>
                                <input type="file" asp-for="ImagePath" required class="form-control p-1" id="photo">
                            </div>
                            <div class="form-group">
                                <label asp-for="Name">Name</label>
                                <input type="text" asp-for="Name"  class="form-control" id="name">
                            </div>
                            <div class="form-group">
                                <label asp-for="Email">Email</label>
                                <input type="text" asp-for="Email" class="form-control" id="name">
                            </div>
                            <div class="form-group">
                                @* <label for="c">Category</label> *@
                                @* <select name="" id="c" class="form-control custom-select"> *@
                                @*     <option value="" selected disabled>Select Category</option> *@
                                @* </select> *@
                                <label asp-for="PasswordHash">Password</label>
                                <input type="text" asp-for="PasswordHash" class="form-control" id="name">
                            </div>
                            <div class="form-group">
                                @* <label for="sc">Sub Category</label> *@
                                @* <select name="" id="sc" class="form-control custom-select"> *@
                                @*     <option value="" selected disabled>Select Sub Category</option> *@
                                @* </select> *@
                                <label asp-for="Address">Address</label>
                                <input type="text" asp-for="Address" class="form-control" id="name">
                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="form-row">
                                <div class="col-6">
                                    <label asp-for="Position">Position</label>
                                    <input type="text" asp-for="Position" id="q" class="form-control">
                                </div>
                                @* <div class="col-6"> *@
                                @*     <label for="">Unit</label> *@
                                @*     <select name="" id="" class="form-control"> *@
                                @*         <option value="1">Kone So</option> *@
                                @*         <option value="2">Kone Kyauk</option> *@
                                @*     </select> *@
                                @* </div> *@
                            </div>
                            <div class="form-group">
                                <label asp-for="ManagerId">ManagerId</label>
                                <input type="number" asp-for="ManagerId" class="form-control">
                            </div>
                            <div class="form-group">
                                <label asp-for="DepartmentId">DepartmentId</label>
                                <input type="number" asp-for="DepartmentId" class="form-control">
                            </div>
                        </div>

                    </div>
                    <hr>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>