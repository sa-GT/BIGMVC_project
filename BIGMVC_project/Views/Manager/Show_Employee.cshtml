@model IEnumerable<BIGMVC_project.Models.Employee>

@{
    ViewData["Title"] = "Show_Employee";
    Layout = "~/Views/Shared/_ManagersLayout1.cshtml";
}

<h1>Show_Employee</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PasswordHash)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                Operation
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PasswordHash)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                    <a asp-controller="Manager" asp-action="Questions" asp-route-id="@item.Id" class="btn btn-success">Evaluation</a>
                    <a asp-controller="Manager" asp-action="AssignTasks" asp-route-id="@item.Id" class="btn btn-primary">Assign Task</a>
                    <a asp-controller="Manager" asp-action="EmployeeTasks" asp-route-id="@item.Id" class="btn btn-secondary">View_Tasks</a>
                    <a asp-controller="Manager" asp-action="EmployeeAttendances" asp-route-id="@item.Id" class="btn btn-secondary">View Attendancs</a>
            </td>
        </tr>
}
    </tbody>
</table>
